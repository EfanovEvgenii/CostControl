<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView android:text="@string/hello_world"
        android:id = "@+id/tvSumma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/etSumma"
        android:layout_below="@id/tvSumma"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:textSize="60sp"
        android:layout_toLeftOf="@+id/buttonSumOK"
        android:hint="Сумма"
        android:textColorHint="#ffededed"> <requestFocus /></EditText>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSumOK"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/etSumma"
        android:text="@string/buttonSumOK"
        android:layout_alignBottom="@+id/etSumma" />

</RelativeLayout>
